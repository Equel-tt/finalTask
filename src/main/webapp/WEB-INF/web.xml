    <!--        <res-auth>Container</res-auth>-->
    <!--    </resource-ref>-->

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.allahverdiev.finaltask.controller.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>